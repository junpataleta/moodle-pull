{
  "manifest_version": 3,

  "name": "Pull - Moodle Integration",
  "description": "A simple Chrome extension that generates git pull commands from the Moodle Tracker for Moodle integrators.",
  "version": "0.8.0",

  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup/popup.html"
  },

  "permissions": [
    "scripting",
    "activeTab",
    "clipboardWrite",
    "storage"
  ],

  "host_permissions": [
    "https://tracker.moodle.org/browse/MDL-*"
  ],

  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  }
}
